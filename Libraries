# Ipyvolume 
#or viewing 3D visuals in Jupyter notebooks

pip install ipyvolume
# or 
conda install -c conda-forge ipyvolume

import ipyvolume as ipv
import numpy as np
x, y, z, u, v, w = np.random.random((6, 1000))*2-1
ipv.quickquiver(x, y, z, u, v, w, size=5)

